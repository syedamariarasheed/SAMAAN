<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:background="#FFF"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0.5dp">

    <LinearLayout
        android:id="@+id/DetailViewClick"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="7dp"
        android:paddingBottom="9dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_shopping_cart_black_24dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAMAAN"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="5dp"
            android:textColor="#3d3a3a"
            android:textSize="18sp">

        </TextView>

    </LinearLayout>

    <TextView
        android:id="@+id/Description"
        android:layout_width="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content"
        android:text="This App may automatically switched and play videos that are less than 1MB in size"
        android:textSize="15sp">

    </TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maximum Time to complete this delivery: "
            android:textColor="#f57676"
            android:textSize="13sp">
        </TextView>

        <TextView
            android:id="@+id/TimeLimit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27 Feb, Wednesday"
            android:layout_gravity="right"
            android:layout_marginLeft="2dp"
            android:textColor="#f57676"
            android:textSize="13sp">
        </TextView>
    </LinearLayout>
    </LinearLayout>

    </androidx.cardview.widget.CardView>